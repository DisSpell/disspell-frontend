<%
  set_meta_tags(
    title: @video.title
  )
%>


<section
  class="video-parent grid h-full grid-rows-[auto_1fr] gap-4 divide-y-4 overflow-y-hidden
        lg:grid-cols-2 lg:divide-x-4 lg:divide-y-0">
  <section id="video-player" data-controller="perfect-scrollbar" 
    class="relative ml-2 mr-2 aspect-video">
    <youtube-video-wrapper videoId=<%= @meta.video_identifier %>></youtube-video-wrapper>
    <h2 class="text-lg pl-2 m-2"><%= highlight(@video.title, params[:query], highlighter: '<mark style="background-color:yellow";>\1</mark>') %></h1>
    <details class="lg:hidden">
      <summary class="text-center">Details</summary>
      <p><%= @platform.name %></p>
      <h5><%= @channel.title %></h5>
      <img src="<%= @meta.thumbnail_url %>" alt="video's thumbnail" />
      <p><%= @meta.video_identifier %></p>
      <p><%= @meta.published_date %></p>
    </details>
    <div id="video-metadata" class="hidden lg:block">
      <p><%= @platform.name %></p>
      <h5><%= @channel.title %></h5>
      <img src="<%= @meta.thumbnail_url %>" alt="video's thumbnail" />
      <p><%= @meta.video_identifier %></p>
      <p><%= @meta.published_date %></p>
    </div>
  </section>
  <section id="video-details" data-controller="perfect-scrollbar" 
    class="relative mr-2 text-center">
    <section id="transcript" class="grid grid-cols space-y-6">
      <div class="grid grid-cols-1 lg:grid-cols-[1fr_4fr] mt-8 p-4 sticky top-0 z-10 bg-white mr-[16px]">
        <div class="self-center">x/y times</div>
        <input type="text" placeholder="<%= params[:query] %>"></input>
        <div class="flex justify-around col-start-2 mt-2">
          <button class="custom-button">Prev</button>
          <button class="custom-button">Next</button>
        </div>
      </div>
      <% @parts_timestramps_arrays.each do |subarray| %>
        <div data-controller="transcript" class="group/timestamp hover:shadow-xl">
          <div data-action="click->transcript#jumpToThisTime"
               class="group/timestamp p-4 grid grid-cols-[1fr_4fr] 
                      content-center divide-x-2 hover:cursor-pointer">
            <span data-transcript-target="timestamp"
                  class="self-center text-center pb-2
                         group-hover/timestamp:underline"
                  data-vtt-timestamp="<%= subarray.first %>">
              <%= convert_vtt_timestamp(subarray.first) %>
            </span>
            <span class="self-center text-center group-hover/timestamp:underline 
                         pb-2 pr-1 pl-1">
              <%= highlight(subarray.second, params[:query]) %>
            </span>
          </div>
        </div>
      <% end %>
    </section>
  </section>
</section>

